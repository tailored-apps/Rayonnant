<window:WindowBase x:Class="TailoredApps.Rayonnant.Presentation.Window.SplashWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:window="clr-namespace:TailoredApps.Rayonnant.Presentation.Window"
                   ResizeMode="NoResize"
                   mc:Ignorable="d"
                   Height="300" Width="450"
                   WindowStartupLocation="CenterScreen" WindowStyle="None" ShowInTaskbar="False">


    <StackPanel>
        <ContentControl Visibility="Visible" Content="{Binding}" />
    </StackPanel>
</window:WindowBase>