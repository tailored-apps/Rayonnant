@page "/"

<PageTitle>Rayonnant - Home</PageTitle>

<MudGrid>
    <MudItem xs="12">
        <MudText Typo="Typo.h4" Class="mb-4">Welcome to Rayonnant</MudText>
    </MudItem>

    <MudItem xs="12" md="4">
        <MudCard Elevation="3">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Primary"><MudIcon Icon="@Icons.Material.Filled.Home" /></MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Welcome</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>Your modular application shell is ready. Start building modules to extend functionality.</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" md="4">
        <MudCard Elevation="3">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Secondary"><MudIcon Icon="@Icons.Material.Filled.BarChart" /></MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Quick Stats</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudSimpleTable Dense="true" Hover="true">
                    <tbody>
                        <tr><td>Modules Loaded</td><td><MudChip T="string" Size="Size.Small" Color="Color.Primary">1</MudChip></td></tr>
                        <tr><td>Active Users</td><td><MudChip T="string" Size="Size.Small" Color="Color.Success">1</MudChip></td></tr>
                        <tr><td>System Health</td><td><MudChip T="string" Size="Size.Small" Color="Color.Success">OK</MudChip></td></tr>
                    </tbody>
                </MudSimpleTable>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" md="4">
        <MudCard Elevation="3">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Tertiary"><MudIcon Icon="@Icons.Material.Filled.History" /></MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Recent Activity</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudList T="string" Dense="true">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                        System initialized
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Extension" IconColor="Color.Info">
                        Dashboard module loaded
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Security" IconColor="Color.Warning">
                        Security scan complete
                    </MudListItem>
                </MudList>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>
